{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "outDir": "dist/server",
        "rootDir": ".",
        "sourceMap": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "strict": false,
        "noEmit": false
    },
    "include": [
        "server/**/*",
        "drizzle.config.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src"
    ]
}