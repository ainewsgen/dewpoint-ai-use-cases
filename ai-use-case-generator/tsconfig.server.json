{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "node16",
        "outDir": "dist/server",
        "rootDir": "server",
        "sourceMap": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "strict": false,
        "noEmit": false
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "include": [
        "server/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src",
        "drizzle.config.ts"
    ]
}